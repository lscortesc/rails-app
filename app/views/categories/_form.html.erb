<div class="col-md-9">
  <%= render 'layouts/errors', obj: @category %>

  <%= form_with(model: category, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, id: :category_name, class: "form-control", autocomplete: "off", placeholder: "Name", autofocus: true %>
    </div>

    <div class="actions">
      <%= form.submit class: 'btn btn-primary' %>
      <%= link_to 'Categories', categories_path, class: 'btn btn-info' %>
    </div>
  <% end %>
</div>