<%= render 'layouts/messages' %>

<h1>
  Categories
  <small>
    <%= link_to 'New', new_category_path, class: 'btn btn-success btn-xs' %>
  </small>
</h1>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead class="thead-light">
      <th>ID</th>
      <th>Name</th>
      <th>Actions</th>
      </thead>
    <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td>
          <div class="btn-group btn-group-xs justify-content" role="group" aria-label="Small button group">
            <%= link_to 'Show', category_path(category), class: 'btn btn-info btn-xs' %>
            <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-primary btn-xs' %>
            <%= link_to 'Delete', category, class: 'btn btn-danger btn-xs',
                        method: :delete, data: { confirm: 'Are you sure?' }%>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>