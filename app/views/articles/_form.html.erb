<div class="col-md-7">
  <%= form_with(model: article, local: true) do |form| %>
    <% if article.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <strong><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</strong>
        <ul>
          <% article.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, id: :article_title, class: "form-control", autocomplete: "off", placeholder: "Title", autofocus: true %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, id: :article_description, class: "form-control", placeholder: "Description" %>
    </div>

    <div class="actions">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>