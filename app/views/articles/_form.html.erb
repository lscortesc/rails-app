<div class="col-md-9">
  <%= render 'layouts/errors', obj: @article %>

  <%= form_with(model: article, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, id: :article_title, class: "form-control", autocomplete: "off", placeholder: "Title", autofocus: true %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, id: :article_description, class: "form-control", placeholder: "Description", rows: '10' %>

    </div>
    <div class="actions">
      <%= form.submit class: 'btn btn-primary' %>
      <%= link_to 'Articles', articles_path, class: 'btn btn-info' %>
    </div>
  <% end %>
</div>