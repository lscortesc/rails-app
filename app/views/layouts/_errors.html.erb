<% if obj.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <strong><%= pluralize(obj.errors.count, "error") %>, you can not save it:</strong>
    <ul>
      <% obj.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>