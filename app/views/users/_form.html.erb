<div class="col-md-9">
  <%= render 'layouts/errors', obj: @user %>

  <%= form_with(model: user, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :username %>
      <%= form.text_field :username, id: :user_username, class: "form-control", autocomplete: "off", placeholder: "Username", autofocus: true %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, id: :user_email, class: "form-control", placeholder: "Email" %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, id: :user_password, class: "form-control", placeholder: "Password" %>
    </div>

    <div class="actions">
      <%= form.submit 'Sign Up', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>